<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <h1>Edit User</h1>
            <form method="post">
                <fieldset class="form-group">
                    <label for="username">Username: *</label>
                    <input name="username" class="form-control" required value="<%= user.username %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="password">Password: *</label>
                    <input name="password" class="form-control"  required value="<%= user.password %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="email">Email: *</label>
                    <input name="email" class="form-control"  required value="<%= user.email %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="displayName">Display Name: *</label>
                    <input name="displayName" class="form-control"  required value="<%= user.displayName %>" />
                </fieldset>
                <fieldset class="form-group text-right">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a href="/users/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a>
                    <a href="/users">
                        <input type="button" class="btn btn-warning" value="Cancel"/>
                    </a>
                </fieldset>
            </form>
        </div>
    </div>

</main>
<% include ../partials/footer.ejs %>