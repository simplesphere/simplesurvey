<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <h1>Users</h1>

    <a href="/users/add">Add a New User</a>

    <ul class="list-group">
        <% for (var i = 0; i < users.length; i++) { %>
            <li class="list-group-item">
                username: 
                <a href="/users/<%= users[i]._id %>" title="Edit User">
                    <%= users[i].username %>
                </a>
                <br />
                password: <%= users[i].password %>
                <br />
                email: <%= users[i].email %>
                <br />
                Display Name: <%= users[i].displayName %>
                <br />
                Created: <%= users[i].created.toDateString() %>
                <br />
                Updated: <%= users[i].updated.toDateString() %>
            </li>
        <% } %>
    </ul>
</main>
<% include ../partials/footer.ejs %>